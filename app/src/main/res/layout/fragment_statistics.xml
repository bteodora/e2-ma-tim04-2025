<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.StatisticsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Your Progress"
            android:fontFamily="@font/logo_font"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_marginBottom="16dp"/>


        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewUserTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="Intermediate" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:text="PP:" />

                <TextView
                    android:id="@+id/textViewUserPowerPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    tools:text="125" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textViewUserXp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginBottom="4dp"
                    tools:text="450 / 1200 XP"/>

                <ProgressBar
                    android:id="@+id/progressBarUserXp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:progress="37"/>

            </LinearLayout>

        </LinearLayout>

        <!-- ===== GLAVNE BROJKE (STREAKS) ===== -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewActiveDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    tools:text="34" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Consecutive\nActive Days" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewLongestStreak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    tools:text="12" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Longest Task\nSuccess Streak" />
            </LinearLayout>
        </LinearLayout>

        <!-- ===== PREGLED ZADATAKA (DONUT CHART) ===== -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Summary"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/chartTaskSummary"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        </LinearLayout>

        <!-- ===== ZADACI PO KATEGORIJI (BAR CHART) ===== -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed by Category"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chartCategory"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        </LinearLayout>

        <!-- ===== XP U POSLEDNJIH 7 DANA (LINE CHART) ===== -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XP Gained (Last 7 Days)"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartXpLast7Days"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        </LinearLayout>

        <!-- ===== PROSEČNA TEŽINA ZADATAKA (LINE CHART) ===== -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Task Difficulty (XP)"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="8dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartAvgDifficulty"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
        </LinearLayout>

        <!-- ===== SPECIJALNE MISIJE ===== -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewMissionsStarted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:text="0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missions Started" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewMissionsCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline4"
                    android:text="0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Missions Completed" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>