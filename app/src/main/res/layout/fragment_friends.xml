<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".fragments.friends.FriendsFragment">

    <!-- Kontejner za akciona dugmad -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <!-- Korišćenje naših stilizovanih dugmadi, bez ikonica -->
        <Button
            android:id="@+id/buttonViewRequests"
            style="@style/PixelButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Requests"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/buttonScanQr"
            style="@style/PixelButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Scan QR"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/buttonCreateAlliance"
            style="@style/PixelButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alliance"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- SearchView sada ima našu stilizovanu pozadinu (okvir) -->
    <SearchView
        android:id="@+id/searchViewUsers"
        style="@style/PixelPanelBorderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search for users..."
        android:iconifiedByDefault="false"
        android:padding="0dp"/>

    <!-- RecyclerView sada zauzima ostatak ekrana -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/list_item_user" />

</LinearLayout>