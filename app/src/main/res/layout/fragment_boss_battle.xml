<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bossBattleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.battle.BossBattleFragment">

    <!-- Boss image -->
    <ImageView
        android:id="@+id/bossImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/boss"
        android:contentDescription="Boss Image" />

    <!-- Boss level -->

    <!-- Boss HP text -->


    <!-- Boss HP bar -->

    <TextView
        android:id="@+id/bossLevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bossHpBar"
        android:layout_marginBottom="46dp"
        android:text="Level: 1"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bossHpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bossHpBar"
        android:layout_marginTop="-66dp"
        android:text="HP: 100/100"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/bossHpBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/bossImageView"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/boss_hp_bar" />

    <!-- User PP bar -->
    <ProgressBar
        android:id="@+id/userPpBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@id/bossHpBar"
        android:layout_marginTop="16dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/user_pp_bar" />

    <!-- Dugme za izbor oružja -->
    <Button
        android:id="@+id/selectWeaponButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userPpBar"
        android:layout_marginTop="12dp"
        android:text="Select Weapon"
        android:layout_centerHorizontal="true"/>

    <!-- Ikonica aktivnog oružja -->
    <ImageView
        android:id="@+id/activeWeaponIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@id/selectWeaponButton"
        android:layout_alignTop="@id/selectWeaponButton"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_face"
        android:visibility="gone"
        android:contentDescription="Active Weapon" />

    <!-- Success rate text -->
    <TextView
        android:id="@+id/successRateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectWeaponButton"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Chance to hit: 0%"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Remaining attacks -->
    <TextView
        android:id="@+id/remainingAttacksText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/successRateText"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:text="Remaining attacks: 5/5"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Attack button -->
    <Button
        android:id="@+id/attackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/remainingAttacksText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Attack" />

    <!-- Treasure chest for rewards -->
    <ImageView
        android:id="@+id/treasureChestImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/attackButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/sanduk"
        android:visibility="gone"
        android:contentDescription="Treasure Chest" />

    <!-- Coins earned -->
    <TextView
        android:id="@+id/coinsEarnedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/treasureChestImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Coins: 0"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:visibility="gone" />

</RelativeLayout>
