<?xml version="1.0" encoding="utf-8"?>
<!-- Glavni kontejner je sada naš stilizovani panel.
     Dodajemo i `clickable` i `foreground` da zadržimo efekat klika. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewItem"
    style="@style/PixelPanelFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Glavni, uvek vidljivi deo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Ikonica predmeta -->
        <ImageView
            android:id="@+id/imageViewItemIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Item Icon"
            tools:src="@mipmap/ic_launcher"/>

        <!-- Kontejner za ime i status (količina) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                tools:text="Small Health Potion"/>

            <TextView
                android:id="@+id/textViewItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="?attr/colorSecondary"
                tools:text="Owned: 3"/>
        </LinearLayout>

        <!-- Kontejner za cenu i dugme za kupovinu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="120 coins"/>

            <Button
                android:id="@+id/buttonBuyItem"
                style="@style/PixelButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:minWidth="90dp"
                android:text="Buy"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Deo koji se proširuje (expandable) -->
    <LinearLayout
        android:id="@+id/layout_expandable_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Naš stilizovani divider -->
        <View
            style="@style/PixelDividerFadeStyle"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewItemDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="This is a detailed description of the item. It restores a small amount of health and gives you a temporary boost in your next battle."/>

    </LinearLayout>

</LinearLayout>