<?xml version="1.0" encoding="utf-8"?>
<!-- FrameLayout je sada glavni kontejner. Omogućava nam da stavimo
     overlay PREKO sadržaja, a da i dalje imamo stilizovanu pozadinu. -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PixelPanelFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp">

    <!-- LinearLayout sa svim vidljivim sadržajem (avatar, tekst, dugme) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="0dp"> <!-- Uklanjamo padding odavde jer ga već ima FrameLayout -->

        <ImageView
            android:id="@+id/imageViewUserAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:contentDescription="User Avatar"
            tools:src="@drawable/default_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="VeryLongUsernameHere" />

            <TextView
                android:id="@+id/textViewUserLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorSecondary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Level 12 - Novajlija" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonUserAction"
            style="@style/PixelButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            tools:text="Add" />

    </LinearLayout>

    <!-- VRAĆEN SELECTION OVERLAY! -->
    <!-- Ovaj View se nalazi "preko" svega ostalog u FrameLayout-u.
         Kada mu se vidljivost postavi na "visible", on će prekriti ceo red. -->
    <View
        android:id="@+id/selection_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selection_overlay_color"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>