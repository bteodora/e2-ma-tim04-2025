<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Naziv zadatka -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTaskTitle"
                android:hint="Task Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Opis zadatka -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/editTaskDescription"
                android:hint="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- Spinneri za kategoriju, učestalost, težinu i bitnost -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/spinnerFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>

            <Spinner
                android:id="@+id/spinnerDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>

            <Spinner
                android:id="@+id/spinnerImportance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Datum i vreme izvršenja -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPickDueDate"
                style="@style/PixelButtonStyle"
                android:text="Pick Due Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/btnPickStartDate"
                style="@style/PixelButtonStyle"
                android:text="Pick Start Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnPickEndDate"
                style="@style/PixelButtonStyle"
                android:text="Pick End Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Interval ponavljanja -->
        <LinearLayout
            style="@style/PixelPanelFilledStyle"
            android:id="@+id/repeatLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/editRepeatInterval"
                android:hint="Repeat Interval (number)"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="4dp"/>

            <Spinner
                android:id="@+id/spinnerRepeatUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Dugme za kreiranje zadatka -->
        <Button
            android:id="@+id/btnCreateTask"
            style="@style/PixelButtonStyle"
            android:text="Create Task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
