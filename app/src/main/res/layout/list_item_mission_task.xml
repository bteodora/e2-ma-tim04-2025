<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/PixelPanelBorderStyle"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <!-- Ime zadatka -->
    <TextView
        android:id="@+id/textViewTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ime zadatka"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textStyle="bold"
        android:paddingBottom="4dp"
        android:textColor="@android:color/black" />

    <!-- Progres bar -->
    <ProgressBar
        android:id="@+id/progressBarTask"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progress="0"
        android:max="10"
        android:progressTint="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary" />

    <!-- Tekstualni prikaz napretka -->
    <TextView
        android:id="@+id/textViewTaskProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/10 (danas 0/2)"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:paddingTop="4dp"
        android:textColor="@android:color/black" />

    <!-- Dugme za kompletiranje zadatka (sakriveno) -->
    <Button
        android:id="@+id/buttonCompleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:visibility="gone" />

</LinearLayout>
