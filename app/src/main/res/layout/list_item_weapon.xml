<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/PixelPanelFilledStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <FrameLayout
        android:id="@+id/frameLayoutWeaponIconContainer"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageViewWeaponIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Weapon Icon"
            tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/textViewWeaponLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="5" />

    </FrameLayout>

    <Button
        android:id="@+id/buttonUpgradeWeapon"
        style="@style/PixelButtonStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lineSpacingMultiplier="0.9"
        android:text="Upgrade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/frameLayoutWeaponIconContainer"
        android:layout_toStartOf="@id/buttonUpgradeWeapon"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textViewWeaponName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Legendary Sword of Endless Text" />

        <TextView
            android:id="@+id/textViewWeaponBonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="+5.02% Power Points" />

    </LinearLayout>

</RelativeLayout>