<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- STEP 1: Pin the buttons to the bottom of the screen -->
    <FrameLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/buttonLeaveAlliance"
            style="@style/PixelButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Alliance"
            android:visibility="gone"
            android:minHeight="56dp"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/buttonDisbandAlliance"
            style="@style/PixelButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disband Alliance"
            app:backgroundTint="#B71C1C"
            android:textColor="@color/white"
            android:visibility="gone"
            android:minHeight="56dp"
            tools:visibility="gone"/>
    </FrameLayout>

    <!-- STEP 2: Pin the header views to the top of the screen -->
    <TextView
        android:id="@+id/textViewLeaderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_alignParentTop="true"
        tools:text="Leader: Ime VoÄ‘e" />

    <View
        android:id="@+id/divider"
        style="@style/PixelDividerFadeStyle"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/textViewLeaderName"/>

    <TextView
        android:id="@+id/textViewMembersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Members"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_below="@id/divider"/>

    <!-- STEP 3: Tell the RecyclerView to fill the space between the header and the buttons -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMembers"
        style="@style/PixelPanelBorderStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:layout_below="@id/textViewMembersLabel"
        android:layout_above="@id/buttonsLayout"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_user"/>

</RelativeLayout>