<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewLeaderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alliance Leader"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="@color/textColorSecondary"/>

        <TextView
            android:id="@+id/textViewLeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Ime VoÄ‘e" />

    </LinearLayout>

    <View
        style="@style/PixelDividerFadeStyle"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewMembersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMembers"
        style="@style/PixelPanelBorderStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/list_item_user"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonLeaveAlliance"
            style="@style/PixelButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leave Alliance"
            android:visibility="gone"
            tools:visibility="visible"/>

        <Button
            android:id="@+id/buttonDisbandAlliance"
            style="@style/PixelButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disband Alliance"
            app:backgroundTint="#B71C1C"
            android:textColor="@color/white"
            android:visibility="gone"
            tools:visibility="gone"/>

    </FrameLayout>

</LinearLayout>